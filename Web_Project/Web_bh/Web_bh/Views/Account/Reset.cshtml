
@{
    ViewBag.Title = "Reset";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2>Reset Password</h2>

@using (Html.BeginForm("Reset", "Account", FormMethod.Post))
{
    <br />
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-md-2 control-label">Email</label>
        <div class="col-md-10">
            @Html.TextBox("Email")
        </div>
    </div>
    <br />
    <div class="form-group">
        <label class="col-md-2 control-label">Token Code</label>
        <div class="col-md-10">
            @Html.TextBox("TokenCode")
        </div>
    </div>
    <br />
    <div class="form-group">
        <label class="col-md-2 control-label">New Password</label>
        <div class="col-md-10">
            @Html.TextBox("NewPassword")
        </div>
    </div>
    <br />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Reset Password" />
        </div>
    </div>
}