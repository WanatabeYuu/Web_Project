
@{
    ViewBag.Title = "Forgot";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Forgot Password</title>


@using (Html.BeginForm("Forgot", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        <label class="col-md-3 control-label">Email Address</label>
        <div class="col-md-9">
            @Html.TextBox("Email", null, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3 col-md-9">
            <input type="submit" class="btn btn-default" value="Retrieve Password" />
        </div>
    </div>
    <div class="text-center">
        <a class="d-block small mt-3" href="/Account/Register">Register an Account</a>
        <br />
        <a class="d-block small" href="/Account/Login">Login Page</a>
    </div>
}
