@model IEnumerable<Web_bh.Models.ThongKeTheoThang>

@{
    ViewBag.Title = "ThongKeTheoThang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdminPage.cshtml";
}


&emsp;<div class="panel panel-default">
    <div class="panel-heading">
        <div class="panel-body">
            <br />
            <center>
                @using (Html.BeginForm("ThongKeTheoThang", "Dashboard", FormMethod.Get))
                {
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-md-offset-0">
                                <input type="text" name="nam" />
                                <input type="submit" value="Enter" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                }
                <br />
            </center>
            <div class="table-responsive">
                <br />
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Tháng</th>
                            <th>Tổng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Thang)</td>
                                <td>@Html.DisplayFor(modelItem => item.Tong)</td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
            </div>
        </div>
    </div>
</div>
